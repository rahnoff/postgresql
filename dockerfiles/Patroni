# syntax=docker/dockerfile:1

ARG docker_image_sha256
ARG python_version
FROM python:$python_version-slim@$docker_image_sha256
WORKDIR /opt/patroni
RUN apt update \
      && apt upgrade -y \
      && apt install -y \
      build-essential \
      libsqlite3-dev \
      && python -m pip install --no-cache-dir --upgrade pip \
      && python -m pip install --no-cache-dir \
      patroni[etcd3,psycopg3] \
      pex \
      pysqlite3 \
      setproctitle \
      && python -m pex \
      $(python -m pip freeze --exclude pex --exclude pysqlite3) \
      -c patroni \
      -o patroni \
      && python -m pex \
      $(python -m pip freeze --exclude pex --exclude pysqlite3) \
      -c patronictl \
      -o patronictl
